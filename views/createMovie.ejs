<%-include ('header') -%>
<body>
  <h1>Crear película</h1>
  <form action="" method="post">
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="rating">Calificación:</label>
    <input type="number" id="rating" name="rating" min="0" max="10" step="0.1" required><br>

    <label for="awards">Premios:</label>
    <input type="number" id="awards" name="awards" min="0"><br>

    <label for="releaseDate">Fecha de estreno:</label>
    <input type="date" id="release_date" name="release_date" required><br>

    <label for="length">Duración (minutos):</label>
    <input type="number" id="length" name="length" min="0" required><br>

    <label for="Genre">Genero</label>
      <select name="Genres">
        <% for (let i =0; i < genres.length; i++) { %>
        <option value="<%=genres[i].id%>">
          <%=genres[i].name%>
        </option>
        <% } %>
      </select>
<br>
    <input type="submit" value="Crear película">
  </form>
  <%-include ('footer') -%>
</body>

