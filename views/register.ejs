<%-include ('head') -%> <%-include ('header') -%>
<div class="centrado">
  <form action="/register" method="POST">
    <div>
      <label for="name">Nombre:</label>
      <input class="forma" type="text" id="name" name="name" placeholder=" Usuario"required />
    </div>
    <div>
      <label for="email">Correo electrónico:</label>
      <input class="forma" type="email" id="email" name="email" placeholder=" ejemplo@ejemplo.com" required />
    </div>
    <div>
      <label for="password">Contraseña:</label>
      <input class="forma" type="password" id="password" name="password" placeholder=" password" required />
    </div>
    <br>
    <button type="submit" class="btn btn-secondary">Registrate</button>
  </form>
</div>
<br />

<%-include ('footer') -%>
